@namespace ClaudeCodeCurator.Components
@using ClaudeCodeCurator.Models
@using ClaudeCodeCurator.Common
@inject EditorState EditorState

<div class="bg-gray-100 rounded-md p-3 border-l-4 border-blue-500">
    <div class="flex items-center">
        <div class="flex-grow">
            <h3 class="text-lg font-semibold text-blue-700">@Project.Name</h3>
            <p class="text-xs text-gray-500">Updated: @Project.CreatedOrUpdatedUtc.ToString("dd.MM.yyyy HH:mm")</p>
        </div>
        <div class="flex space-x-2">
            <button @onclick="CreateUserStory" class="text-gray-500 hover:text-blue-600" title="Add user story">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
            </button>
            <button class="text-gray-500 hover:text-blue-600" title="Edit project">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125" />
                </svg>
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ProjectModel Project { get; set; } = null!;

    private void CreateUserStory()
    {
        EditorState.ShowCreateUserStory(Project);
    }
}