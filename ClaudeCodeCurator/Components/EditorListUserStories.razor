@namespace ClaudeCodeCurator.Components
@using ClaudeCodeCurator.Models

<div class="mt-4">
    <h4 class="text-sm font-medium text-gray-700 mb-2">User Stories</h4>
    
    <div class="space-y-2 pl-2">
        @foreach (var userStory in Project.UserStories.OrderBy(us => us.UserStoryNumber))
        {
            <EditorListUserStory UserStory="@userStory" />
        }
    </div>
    
    <div class="mt-3">
        <button class="text-sm text-blue-600 hover:text-blue-800 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-1">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Add User Story
        </button>
    </div>
</div>

@code {
    [Parameter]
    public ProjectModel Project { get; set; } = null!;
}