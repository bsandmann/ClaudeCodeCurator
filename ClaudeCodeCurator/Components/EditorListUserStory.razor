@namespace ClaudeCodeCurator.Components
@using ClaudeCodeCurator.Models
@using ClaudeCodeCurator.Common
@inject EditorState EditorState

<div class="border-l-2 border-gray-300 pl-3 py-2 rounded">
    <div class="flex items-center hover:bg-gray-50 -ml-3 pl-3 py-1 rounded cursor-pointer" @onclick="ToggleExpanded">
        <div class="flex-grow">
            <div class="flex items-center">
                <span class="text-xs mr-1 text-gray-500">
                    <span class="material-symbols-outlined text-sm @(_isExpanded ? "rotate-90" : "")">chevron_right</span>
                </span>
                <span class="text-xs bg-gray-200 rounded px-1 mr-2">US-@UserStory.UserStoryNumber</span>
                <h5 class="text-sm font-medium">@UserStory.Name</h5>
            </div>
            
            @if (!string.IsNullOrEmpty(UserStory.Description))
            {
                <p class="text-xs text-gray-500 mt-1 line-clamp-2">@UserStory.Description</p>
            }
            
            <div class="text-xs text-gray-400 mt-1">
                @UserStory.Tasks.Count task@(UserStory.Tasks.Count != 1 ? "s" : "")
            </div>
        </div>
        <div class="flex space-x-2">
            <button class="text-gray-400 hover:text-blue-600" title="Add task" @onclick:stopPropagation="true" @onclick="CreateTask">
                <span class="material-symbols-outlined text-xs">add</span>
            </button>
            <button class="text-gray-400 hover:text-blue-600" title="Edit user story" @onclick:stopPropagation="true" @onclick="EditUserStory">
                <span class="material-symbols-outlined text-xs">edit</span>
            </button>
        </div>
    </div>
    
    @if (_isExpanded && UserStory.Tasks.Any())
    {
        <div class="ml-2 mt-1 space-y-1">
            @foreach (var task in UserStory.Tasks.OrderBy(t => t.TaskNumber))
            {
                <EditorListTask Task="@task" UserStory="@UserStory" />
            }
        </div>
    }
</div>

@code {
    [Parameter]
    public UserStoryModel UserStory { get; set; } = null!;
    
    private bool _isExpanded = false;
    
    private void ToggleExpanded()
    {
        _isExpanded = !_isExpanded;
        
        if (!_isExpanded)
        {
            // When collapsed, show the user story details
            ViewUserStory();
        }
    }
    
    private void ViewUserStory()
    {
        EditorState.ShowViewUserStory(UserStory);
    }
    
    private void EditUserStory()
    {
        EditorState.ShowEditUserStory(UserStory);
    }
    
    private void CreateTask()
    {
        EditorState.ShowCreateTask(UserStory);
    }
}